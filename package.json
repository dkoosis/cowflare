{
	"name": "remote-mcp-server",
	"version": "0.0.0",
	"private": true,
	"scripts": {
		"deploy": "wrangler deploy",
		"dev": "wrangler dev",
		"format": "biome format --write src test",
		"lint": "biome check src test",
		"lint:fix": "biome check src test --write",
		"lint:all": "biome check",
		"start": "wrangler dev",
		"cf-typegen": "wrangler types",
		"type-check": "tsc --noEmit",
		"prepare": "bash scripts/build.sh",
		"test": "bash scripts/test-quick.sh",
		"test:integration": "bash test-mcp.sh",
		"test:interactive": "bash test-interactive.sh",
		"test:all": "bash scripts/test-all.sh",
		"build:test": "npm run prepare && npm run test:all",
		"precommit": "npm run build:test",
		"check:updates": "npm outdated @cloudflare/vitest-pool-workers",
		"review:prep": "bash scripts/prepare-review.sh"
	},
	"dependencies": {
		"@cloudflare/workers-oauth-provider": "^0.0.5",
		"@modelcontextprotocol/sdk": "1.13.1",
		"agents": "^0.0.100",
		"hono": "^4.8.3",
		"zod": "^3.25.67"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.1.2",
		"@cloudflare/vitest-pool-workers": "^0.1.0",
		"marked": "^16.0.0",
		"typescript": "^5.8.3",
		"vitest": "^1.2.0",
		"workers-mcp": "^0.0.13",
		"wrangler": "^4.22.0"
	}
}
